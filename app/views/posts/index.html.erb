<h1>Webseries Index!!</h1>

<%= paginate @posts %>


<table>
  <thead>
    <tr>
      <th width="150">Table Header</th>
      <th width="200">Description</th>
      <% if current_user.try(:admin?) %>
        <th width="200">Delete?</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.webseries_name, post_path(post) %></td>
          <td><%= post.description %></td>
          <% if current_user.try(:admin?) %>
            <td>
              <%= button_to 'Delete Post', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
            </td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>

<%= button_to 'Post a Series', new_post_path, method: :get %>
